{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNEXT",
    "moduleResolution": "bundler",
    "outDir": "out-tsc/vitest",
    "tsBuildInfoFile": "out-tsc/vitest/tsconfig.spec.tsbuildinfo",
    "types": [
      "node",
      "vite/client",
      "vitest",
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.test.jsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
